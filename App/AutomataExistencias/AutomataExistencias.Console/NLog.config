<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Error" internalLogFile="c:\temp\nlog-internal-AutomataExistencias.log">
  <targets>
    <target xsi:type="EventLog"
                name="EventLog"
                source="${logger}"
                eventId="${processid}"
                log="Aldebaran"
                machineName="."
                layout="${longdate} [${level:upperCase=true}]${newline}CallSite: ${callsite}${newline}${message}${newline}${exception:format=ToString}"/>
    <target name="ConsoleLog" xsi:type="Console" layout="${longdate} ${callsite} ${level} ${message}"/>
    <!--https://github.com/NLog/NLog/wiki/Examples; https://github.com/nlog/NLog/wiki/Mail-target-->
    <target name="MailLog" xsi:type="Mail"
            smtpServer="172.22.36.130"
            smtpAuthentication="None"
            smtpUserName="webmerge@directvla.com.co"
            enableSsl="true"
            subject="Mensaje desde Aut贸mata Existencias desde ${uppercase:${machinename}}"
            layout="${longdate}${newline}
                    Nivel: ${uppercase:${level}}${newline}
                    Ubicaci贸n del error: ${callsite:className=true:includeSourcePath=true:methodName=true}${newline}    
                    Detalle del error:${newline}
                    ${message}${newline}"
            from="webmerge@directvla.com.co"
            to="anddiaz@directvla.com.co"/>
  <!--
      <target name="MailLog" xsi:type="Mail"
            smtpServer="smtp.megacorreo.com"
            smtpAuthentication="None"
            smtpUserName="cataprom_aldebaran@megacorreo.com"
            enableSsl="false"
            subject="Mensaje desde Aut贸mata Existencias desde ${uppercase:${machinename}}"
            layout="${longdate}${newline}Nivel: ${uppercase:${level}}${newline}Ubicaci贸n del error: ${callsite:className=true:includeSourcePath=true:methodName=true}${newline}Detalle del error:${newline}${message}${newline}"
            from="automata@catalogospromocionales.com"
            to="ardc2440@gmail.com"/>
  -->
  </targets>
  <rules>
    <logger name="*" minlevel="Trace" writeTo="EventLog" />
    <logger name="*" minlevel="Trace" writeTo="ConsoleLog" />
    <logger name="*" levels="Fatal" writeTo="MailLog" />
  </rules>
</nlog>
